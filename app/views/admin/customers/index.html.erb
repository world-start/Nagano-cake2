<h4>会員一覧</h4>

<div class="customer-form">
  
<table>
  <thead>
    <tr>
      <th width="15%">会員ID</th>
      <th width="20%">氏名</th>
      <th width="40%">メールアドレス</th>
      <th width="25%">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to(admin_customer_path(customer)) do %>
          <%= customer.last_name %>
          <%= customer.first_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active == true %>
        <p>有効</p>
        <% else %>
        <p>退会</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @customers %>
</div>
