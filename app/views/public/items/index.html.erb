<div class="main">
  
<div class="genre-search">
  <p>ジャンル検索</p>
        <% @genres.each do |genre| %>
          <%= genre.name %><br>
        <% end %>
</div>
 
 <div class="items-index">
<div class="container">
  <h3>商品一覧<small>(全<%= @number %>件)</small></h3>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 200, 100, format: 'jpeg' %><br>
        <% end %> 
          <%= item.name %><br>
          <%= item.price %>円<br>
      </div>
    <% end %>
  </div>
  <div class="float-right">
   <%= paginate @items %>
  </div>
</div>
</div>
 </div>     
</div>