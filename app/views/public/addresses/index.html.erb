<h4>配送先登録/一覧</h4>

<%= form_with model: @address, url: addresses_path(@address), local:true do |f| %>
<div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>
  
   <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :name %>
  </div>
  
  <%= f.submit '新規登録', class: 'btn btn-success' %>
  <% end %>
  
  
  <table>
      <thead>
          <tr>
             <th>郵便番号</th>
             <th>住所</th>
             <th>宛名</th>
             <th></th>
          </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
             <td><%= address.postal_code %></td>
             <td><%= address.address%></td>
             <td><%= address.name%></td>
             <td>
               <%= link_to '編集', edit_address_path(address), class: 'btn btn-success' %>
               <%= link_to '削除', address_path(address), method: :delete, class: 'btn btn-danger' %>
             </td>
          </tr>
        <% end %>
      </tbody>
  </table>