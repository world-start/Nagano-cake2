<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/91078cb5ad.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light navbar-expand-lg">
        <div class="container">
          
          <div class="navbar-brand">
            <%= link_to "LOGO", root_path, class: "link-logo" %>
          </div>
          
          <!--<% if customer_signed_in? %>-->
          <!--  ようこそ、<%= current_customer.last_name %>さん！-->
          <!--<% end %>-->
          
  
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li class="nav-item active"><%= link_to "商品一覧", admin_items_path, class: "link" %></li>
              <li class="nav-item active"><%= link_to "会員一覧", admin_customers_path, class: "link" %></li>
              <li class="nav-item active"><%= link_to "注文履歴一覧", admin_root_path, class: "link" %></li>
              <li class="nav-item active"><%= link_to "ジャンル一覧", admin_genres_path, class: "link" %></li>
              <li class="nav-item active"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "link" %></li>
            <% elsif customer_signed_in? %>
              <li class="nav-item active"><%= link_to 'マイページ', customer_path(current_customer), class: "link" %></li>
              <li class="nav-item active"><%= link_to "商品一覧", items_path, class: "link"  %></li>
              <li class="nav-item active"><%= link_to "カート", cart_items_path, class: "link"  %></li>
              <li class="nav-item active"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "link" %></li>
             <% else %>
              <li class="nav-item active"><%= link_to "About", homes_about_path, class: "link" %></li>
              <li class="nav-item active"><%= link_to "商品一覧", items_path, class: "link"  %></li>
              <li class="nav-item active"><%= link_to "新規登録", new_customer_registration_path, class: "link"  %></li>
              <li class="nav-item active"><%= link_to "ログイン", new_customer_session_path, class: "link"  %></li>
            <% end %>
          </ul>
          </div>
        </div>
      </nav>
      <!--font awesome読み込む-->
      <div class="text-right">
        <input type="text" placeholder="Search">
        <button type="submit"><i class="fa fa-search"></i></button>
      </div>
      
      </div>
      
    </header>
    
    <main>
      <%= yield %>
    </main>
  </body>
</html>
